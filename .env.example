# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/expense_tracker?sslmode=disable

# Server Configuration
PORT=8089

# Gmail API Credentials (Optional - for email integration)
# Get credentials from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REFRESH_TOKEN=your_refresh_token_here

# Email Sync Configuration
EMAIL_SYNC_INITIAL_DAYS=7        # How many days to sync on first connection (default: 30)
EMAIL_SYNC_INTERVAL_MINUTES=5    # How often to check for new emails in minutes (default: 5)
EMAIL_SYNC_BATCH_SIZE=50         # Number of emails to fetch per sync (default: 50)
EMAIL_SYNC_INITIAL_BATCH_SIZE=200 # Number of emails to fetch on initial sync (default: 200)
